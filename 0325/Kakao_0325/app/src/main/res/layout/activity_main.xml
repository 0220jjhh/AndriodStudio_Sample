<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.kakao_0325.MainActivity"
    android:background="@android:color/white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="15pt"
        android:layout_marginTop="10pt"
        android:text="암    호" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="10pt"
        android:layout_marginTop="5pt"
        android:text="암호를 입력하세요" />

    <LinearLayout
        android:layout_marginTop="4pt"
        android:orientation="horizontal"
        android:layout_marginLeft="20pt"
        android:layout_marginRight="20pt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15pt"
            android:gravity="center"
            android:padding="10dp"
            android:layout_weight="1"
            android:text="○"/>

        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15pt"
            android:gravity="center"
            android:padding="10dp"
            android:layout_weight="1"
            android:text="○"/>

        <TextView
            android:id="@+id/tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15pt"
            android:gravity="center"
            android:padding="10dp"
            android:layout_weight="1"
            android:text="○"/>

        <TextView
            android:id="@+id/tv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15pt"
            android:gravity="center"
            android:padding="10dp"
            android:layout_weight="1"
            android:text="○"/>

    </LinearLayout>

    <TableLayout
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp">
        <TableRow>
            <Button
                android:onClick="clickMe"
                android:id="@+id/btn1"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:padding="5dp"
                android:text="1"
                android:textSize="12pt"
                android:background="@android:color/white"/>
            <Button
                android:onClick="clickMe"
                android:id="@+id/btn2"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:padding="5dp"
                android:text="2"
                android:textSize="12pt"
                android:background="@android:color/white"/>
            <Button
                android:onClick="clickMe"
                android:id="@+id/btn3"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:padding="5dp"
                android:text="3"
                android:textSize="12pt"
                android:background="@android:color/white"/>
        </TableRow>

        <TableRow>
            <Button
                android:onClick="clickMe"
                android:id="@+id/btn4"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:padding="5dp"
                android:text="4"
                android:textSize="12pt"
                android:background="@android:color/white"/>
            <Button
                android:onClick="clickMe"
                android:id="@+id/btn5"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:padding="5dp"
                android:text="5"
                android:textSize="12pt"
                android:background="@android:color/white"/>
            <Button
                android:onClick="clickMe"
                android:id="@+id/btn6"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:padding="5dp"
                android:text="6"
                android:textSize="12pt"
                android:background="@android:color/white"/>
        </TableRow>

        <TableRow>
            <Button
                android:onClick="clickMe"
                android:id="@+id/btn7"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:padding="5dp"
                android:text="7"
                android:textSize="12pt"
                android:background="@android:color/white"/>
            <Button
                android:onClick="clickMe"
                android:id="@+id/btn8"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:padding="5dp"
                android:text="8"
                android:textSize="12pt"
                android:background="@android:color/white"/>
            <Button
                android:onClick="clickMe"
                android:id="@+id/btn9"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:padding="5dp"
                android:text="9"
                android:textSize="12pt"
                android:background="@android:color/white"/>
        </TableRow>

        <TableRow>
            <Button
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:padding="5dp"
                android:text=" "
                android:textSize="12pt"
                android:background="@android:color/white"/>
            <Button
                android:onClick="clickMe"
                android:id="@+id/btn10"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:padding="5dp"
                android:text="0"
                android:textSize="12pt"
                android:background="@android:color/white"/>
            <Button
                android:onClick="clickMe"
                android:id="@+id/btn11"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:padding="5dp"
                android:text="◀"
                android:textSize="12pt"
                android:background="@android:color/white"/>
        </TableRow>

    </TableLayout>

</LinearLayout>
